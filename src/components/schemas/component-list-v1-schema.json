{
  "$id": "https://activepieces.com/schema/component-list-v1-schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "version": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "logo": {
            "type": "string",
            "format": "uri"
          },
          "manifest": {
            "type": "string",
            "format": "uri"
          },
          "package": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "version": {
                "type": "string"
              },
              "entryClass": {
                "type": "string"
              }
            }
          }
        },
        "required": [
          "name",
          "logo",
          "version",
          "manifest",
          "package"
        ]
      }
    }
  },
  "required": [
    "components"
  ],
  "examples": [
    {
      "components": [
        {
          "name": "Slack",
          "description": "Slack Component",
          "logo": "https://slack.com/logo.png",
          "manifest": "https://cdn.activepieces.com/components/slack.json"
        }
      ]
    }
  ]
}