{
    "$id": "https://activepieces.com/schema/component-manifest-v1-schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "baseUrl": {
            "type": "string",
            "format": "uri"
        },
        "version": {
            "type": "string",
            "description": "component semver",
            "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+"
        },
        "actions": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": { "type": "string" },
                    "description": { "type": "string" },
                    "url": {
                        "type": "string",
                        "format": "uri-reference"
                    },
                    "method": {
                        "type": "string",
                        "enum": ["CONNECT", "DELETE", "GET", "HEAD", "OPTIONS", "PATCH", "POST", "PUT", "TRACE"]
                    },
                    "inputs": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "description": "The key name passed to the component config"
                                },
                                "displayName": {
                                    "type": "string",
                                    "description": "The name of the input displayed to the user in the builder"
                                },
                                "description": { "type": "string" },
                                "uiType": {
                                    "type": "string",
                                    "enum": ["SHORT_TEXT", "LONG_TEXT", "SELECT", "INTEGER", "BOOLEAN"]
                                },
                                "type": {
                                    "type": "string",
                                    "enum": ["STRING", "NUMBER", "INTEGER", "OBJECT", "ARRAY", "BOOLEAN"]
                                },
                                "in": {
                                    "type": "string",
                                    "enum": ["HEADER", "PATH", "QUERY", "BODY"]
                                },
                                "options": {
                                    "type": "array",
                                    "items": { "type": "string" }
                                },
                                "required": { "type": "boolean" }
                            },
                            "required": ["name", "displayName", "uiType", "type", "in", "required"]
                        }
                    }
                },
                "required": ["name", "url", "method", "inputs"]
            }
        }
    },
    "required": ["version", "actions"],
    "examples": [
        {
            "baseUrl": "https://api.slack.com",
            "version": "0.0.0",
            "security": [
                {
                    "type": "oauth2",
                    "tokenUrl": "https://slack.com/oauth/token",
                    "responseType": "code",
                    "authUrl": "https://slack.com/oauth/authorize",
                    "scopes": []
                }
            ],
            "actions": [
                {
                    "name": "send a message",
                    "description": "send a message",
                    "url": "/chat.postMessage",
                    "method": "POST",
                    "inputs": [
                        {
                            "name": "channel",
                            "displayName": "Channel",
                            "description": "description",
                            "uiType": "SHORT_TEXT",
                            "type": "STRING",
                            "in": "HEADER",
                            "required": true
                        },
                        {
                            "name": "example select",
                            "displayName": "example select",
                            "uiType": "SELECT",
                            "type": "STRING",
                            "in": "QUERY",
                            "options": ["option 1", "option 2", "option 3"],
                            "required": false
                        }
                    ]
                }
            ]
        }
    ]
}