{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "brace-style": "off",
        "@typescript-eslint/brace-style": ["error", "stroustrup"],
        "indent": "off",
        "@typescript-eslint/indent": ["error", 4],
        "quotes": "off",
        "@typescript-eslint/quotes": ["error", "single"],
        "semi": "off",
        "@typescript-eslint/semi": ["error", "never"],
        "no-console": "error"
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ]
}
